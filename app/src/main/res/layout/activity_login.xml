<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/primary"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/primary"
        android:background="@color/transparent"
        android:padding="24dp"
        android:elevation="8dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="58dp"
        android:layout_gravity="center"
        android:gravity="center">


        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="100dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/og_crop"
                android:layout_gravity="center"
                android:contentDescription="PactFlowLogo"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:hint="Email or username"
            android:textColorHint="@color/black"
            android:padding="14dp"
            android:fontFamily="@font/poppins_semibold"
            android:drawableStart="@drawable/person_24px"
            android:textColor="@color/primary4"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_card_bg"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/input_card_bg"
            android:hint="Password"
            android:drawableStart="@drawable/lock_24px"
            android:textColor="#1976D2"
            android:fontFamily="@font/poppins_semibold"
            android:textColorHint="@color/black"
            android:inputType="textWebPassword"
            android:padding="14dp" />


        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="290dp"
            android:layout_height="67dp"
            android:text="Login"
            android:backgroundTint="#1976D2"
            android:theme="@style/CardView"
            android:textColor="#fff"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="14dp"
            android:padding="10dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <TextView
                android:id="@+id/textViewForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="#1976D2"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="end"
                android:layout_marginRight="56dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/textViewRegisterPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/textViewRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#1976D2"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center_horizontal"
                android:paddingTop="6dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>





    </LinearLayout>


</ScrollView>